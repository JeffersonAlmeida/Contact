<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding_contact_item"
    android:id="@+id/rl2">

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_action_today"
        android:id="@+id/birthday_icon"/>

    <TextView
        android:id="@+id/born"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:layout_marginLeft="@dimen/margin_left_contact_item"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:ellipsize="start"
        android:hint="@string/birthday_hint"
        android:singleLine="true"
        android:text="@string/birthday_test"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSize_contact_item"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/birthday_icon"
        />

</RelativeLayout>